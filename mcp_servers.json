{
  "default": ["aws-documentation", "duckduckgo"],
  "recommended": {
    "aws-documentation": {
      "name": "awslabs.aws-documentation-mcp-server",
      "description": "AWS official documentation search",
      "config": {
        "command": "uvx",
        "args": ["awslabs.aws-documentation-mcp-server@latest"],
        "env": {
          "FASTMCP_LOG_LEVEL": "ERROR",
          "AWS_DOCUMENTATION_PARTITION": "aws"
        },
        "timeout": 30000
      },
      "recommended_allowed_tools": [
        "@awslabs.aws-documentation-mcp-server/search_documentation",
        "@awslabs.aws-documentation-mcp-server/read_documentation",
        "@awslabs.aws-documentation-mcp-server/recommend"
      ]
    },
    "aws-pricing": {
      "name": "awslabs.aws-pricing-mcp-server",
      "description": "AWS pricing information",
      "config": {
        "command": "uvx",
        "args": ["awslabs.aws-pricing-mcp-server@latest"],
        "env": {
          "FASTMCP_LOG_LEVEL": "ERROR",
          "AWS_REGION": "us-east-1"
        },
        "timeout": 30000
      },
      "recommended_allowed_tools": [
        "@awslabs.aws-pricing-mcp-server/get_pricing",
        "@awslabs.aws-pricing-mcp-server/get_pricing_service_codes",
        "@awslabs.aws-pricing-mcp-server/generate_cost_report",
        "@awslabs.aws-pricing-mcp-server/get_bedrock_patterns"
      ]
    },
    "aws-diagram": {
      "name": "awslabs.aws-diagram-mcp-server",
      "description": "AWS architecture diagram generation",
      "config": {
        "command": "uvx",
        "args": ["awslabs.aws-diagram-mcp-server"],
        "env": {
          "FASTMCP_LOG_LEVEL": "ERROR"
        },
        "timeout": 30000
      },
      "recommended_allowed_tools": [
        "@awslabs.aws-diagram-mcp-server/generate_diagram",
        "@awslabs.aws-diagram-mcp-server/list_icons",
        "@awslabs.aws-diagram-mcp-server/get_diagram_examples"
      ]
    },
    "duckduckgo": {
      "name": "duckduckgo-mcp-server",
      "description": "Web search and content fetching",
      "config": {
        "command": "uvx",
        "args": ["duckduckgo-mcp-server"],
        "timeout": 30000
      },
      "recommended_allowed_tools": [
        "@duckduckgo-mcp-server/search",
        "@duckduckgo-mcp-server/fetch_content"
      ]
    },
    "searxng": {
      "name": "mcp-searxng",
      "description": "Self-hosted SearXNG search engine (auto-starts with Docker)",
      "config": {
        "command": "docker",
        "args": [
          "run",
          "-i",
          "--rm",
          "--network", "host",
          "-e", "SEARXNG_URL",
          "isokoliuk/mcp-searxng:latest"
        ],
        "env": {
          "SEARXNG_URL": "http://localhost:8080"
        },
        "timeout": 30000
      },
      "recommended_allowed_tools": [
        "@mcp-searxng/searxng_web_search",
        "@mcp-searxng/web_url_read"
      ]
    }
  }
}
